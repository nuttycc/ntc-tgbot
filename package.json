{
  "name": "ntc-tgbot",
  "version": "0.0.1",
  "description": "A Telegram bot built with GrammY framework",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/bot.ts",
    "start": "deno run --watch --allow-net --allow-env --env-file=.env.local main.ts",
    "lint": "oxlint",
    "format": "prettier --write . --experimental-cli",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "keywords": [
    "telegram",
    "bot",
    "grammy",
    "typescript"
  ],
  "author": "--",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/commands": "^1.1.0",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/emoji": "^1.2.0",
    "@grammyjs/menu": "^1.3.1",
    "@grammyjs/router": "^2.0.0",
    "grammy": "^1.37.0",
    "tldts": "^7.0.10"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/deno": "^2.3.0",
    "@types/node": "^24.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.8.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write --experimental-cli",
      "oxlint --fix"
    ]
  }
}
