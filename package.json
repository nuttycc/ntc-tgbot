{
  "name": "ntc-tgbot",
  "version": "0.0.1",
  "description": "A Telegram bot built with GrammY framework",
  "main": "dist/bot.js",
  "type": "module",
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "scripts": {
    "dev": "bun run --watch src/bot.ts",
    "dev:webhook": "concurrently \"deno run --watch --allow-net --allow-env --env-file=.env.local main.ts\" \"lt --port 8000\"",
    "check": "concurrently \"deno check .\" \"oxlint\"",
    "format": "prettier --write .",
    "test:run": "vitest run",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "keywords": [
    "telegram",
    "bot",
    "grammy",
    "typescript"
  ],
  "author": "--",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/commands": "^1.1.0",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/emoji": "^1.2.0",
    "@grammyjs/menu": "^1.3.1",
    "@grammyjs/parse-mode": "^2.2.0",
    "@grammyjs/router": "^2.0.0",
    "@grammyjs/storage-free": "^2.5.1",
    "@logtape/file": "^1.0.4",
    "@logtape/logtape": "^1.0.4",
    "@logtape/pretty": "^1.0.4",
    "arktype": "^2.1.20",
    "es-toolkit": "^1.39.8",
    "grammy": "^1.37.0",
    "tldts": "^7.0.10"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/deno": "^2.3.0",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.8.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "oxlint --fix"
    ]
  }
}
